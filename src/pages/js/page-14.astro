---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const metadata = {
  title: 'Tips | js スクロールで画像拡大',
  description: 'Tips | js スクロールで画像拡大',
};
---

<Layout {...metadata} pageData="page13">
  <Header />
  <div class="p-page13">
    <section class="p-page13_fv">↓スクロールしてね！</section>
    <div class="p-page13_area" data-sticky>
      <div class="p-page13_gallery">
        <div class="p-page13_grid" data-gridArea>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_01.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_02.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_03.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_04.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_01.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_02.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
          <div class="p-page13_item">
            <ImageFrame
              srcPaths={['img_03.jpg']}
              classNames="i"
              loading="eager"
              data-img="fv"
            />
          </div>
        </div>
      </div>
    </div>
    <section class="p-page13_end">終わり</section>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page13 {
    > .p-page13_fv {
      width: 100%;
      height: 100dvh;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      @include media(pc) {
        font-size: pc(40);
      }
    }
    > .p-page13_area {
      height: 400vh;
      background-color: $color_black_01;
      > .p-page13_gallery {
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: clip;
        display: flex;
        align-items: center;
        justify-content: center;
        > .p-page13_grid {
          width: 100%;
          height: pc(970);
          position: relative;
          > .p-page13_item {
            width: pc(520);
            height: pc(380);
            overflow: clip;
            &:nth-of-type(1) {
              position: absolute;
              top: pc(70);
              left: pc(-140);
            }
            &:nth-of-type(2) {
              position: absolute;
              bottom: pc(70);
              left: pc(-140);
            }
            &:nth-of-type(3) {
              position: absolute;
              top: pc(-150);
              right: 0;
              left: 0;
              margin: auto;
            }
            &:nth-of-type(4) {
              position: absolute;
              top: 0;
              right: 0;
              bottom: 0;
              left: 0;
              margin: auto;
            }
            &:nth-of-type(5) {
              position: absolute;
              right: 0;
              bottom: pc(-150);
              left: 0;
              margin: auto;
            }
            &:nth-of-type(6) {
              position: absolute;
              top: pc(70);
              right: pc(-140);
            }
            &:nth-of-type(7) {
              position: absolute;
              bottom: pc(70);
              right: pc(-140);
              margin: auto;
            }
            > .i {
              width: 100%;
              height: 100%;
              object-fit: cover;
              object-position: center center;
            }
          }
        }
      }
    }
    > .p-page13_end {
      width: 100%;
      height: 100dvh;
      display: flex;
      align-items: center;
      justify-content: center;
      @include media(pc) {
        font-size: pc(40);
      }
    }
  }
</style>

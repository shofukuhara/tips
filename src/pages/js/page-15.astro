---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const metadata = {
  title: 'Tips | js フローティング表示・非表示',
  description: 'Tips | js フローティング表示・非表示',
};
---

<Layout {...metadata} pageData="page15">
  <Header />
  <div class="p-page15">
    <div class="p-page15_floating">
      <Button
        link="/js/page-15/"
        text="ボタン"
        className=""
        data={{ 'data-button': 'hidden' }}
      />
    </div>
    <div class="p-page15_fv">↓スクロールしてね！</div>
    <div class="p-page15_area" data-trigger="visible">
      <section class="p-page15_section">表示</section>
      <section class="p-page15_section">表示</section>
      <section class="p-page15_section">表示</section>
    </div>
    <section class="p-page15_section" data-trigger="hidden">非表示</section>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page15 {
    .p-page15_floating {
      position: fixed;
      right: pc(40);
      bottom: pc(40);
      // opacity: 0;
      // visibility: hidden;
      // z-index: 1000;
    }
    .p-page15_fv {
      width: 100%;
      height: 100dvh;
      display: grid;
      place-content: center;
    }
    .p-page15_section {
      width: 100%;
      height: 100dvh;
      display: grid;
      place-content: center;
      border-top: 1px solid #000;
    }
  }
</style>

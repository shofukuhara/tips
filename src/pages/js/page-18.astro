---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const metadata = {
  title: 'Tips | js hover',
  description: 'Tips | js hover',
};
---

<Layout {...metadata} pageData="page18">
  <Header />
  <div class="p-page18_fv">
    <div class="p-page18_container" data-container></div>
    <div class="p-page18_cursor" data-cursor></div>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page18_fv {
    width: 100%;
    height: 100dvh;
    display: grid;
    place-content: center;
    .p-page18_container {
      width: pc(400);
      height: pc(400);
      background-color: #d2d2d2;
      position: relative;
    }
    .p-page18_cursor {
      display: flex;
      justify-content: center;
      align-items: center;
      width: pc(40);
      height: pc(40);
      background-color: rgb(0 0 0 / 20%);
      border-radius: 50%;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 100;
      pointer-events: none;
      &.over {
      }
    }
    [data-cursor] {
      opacity: 0;
      visibility: hidden;
    }
    [data-cursor='mouseOver'] {
      // opacity: 1;
      // visibility: visible;
    }
  }
</style>

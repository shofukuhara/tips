<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page10 {
    width: 100%;
    height: 100svb;
    display: flex;
    align-items: center;
    justify-content: center;
    > .p-page10_list {
      @include media(pc) {
        width: pc(1000);
        border-top: pc(1) solid rgba(29, 28, 27, 0.18);
      }
      > .p-page10_item {
        @media (any-hover: hover) {
          .p-page10_link {
            &:hover {
              > .p-page10_line {
                transform-origin: left top;
                transform: scale(1, 1);
                transition: 0.55s ease;
                transition-property: transform;
              }
            }
          }
        }
        > .p-page10_link {
          display: grid;
          grid-template-columns: auto 1fr auto;
          align-items: center;
          position: relative;
          &::after {
            content: '';
            width: 100%;
            height: pc(1);
            border-bottom: pc(1) solid rgba(29, 28, 27, 0.18);
            position: absolute;
            bottom: 0;
            left: 0;
          }
          @include media(pc) {
            padding: pc(32) 0;
          }
          > .p-page10_meta {
            display: grid;
            grid-template-columns: auto auto;
            align-items: center;
            @include media(pc) {
              gap: pc(32);
            }
            > .p-page10_date {
              color: $color_black_01;
              @include media(pc) {
                font-size: pc(16);
              }
            }
            > .p-page10_category {
              color: $color_black_01;
              @include media(pc) {
                font-size: pc(16);
              }
            }
            > .p-page10_date {
              color: $color_black_01;
              @include media(pc) {
                font-size: pc(16);
              }
            }
          }
          > .p-page10_text {
            line-height: 1.6ch;
            color: $color_black_01;
            @include media(pc) {
              font-size: pc(16);
              margin-left: pc(40);
            }
          }
          > .p-page10_icon {
            aspect-ratio: 1;
            background-color: $color_black_01;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            @include media(pc) {
              width: pc(24);
            }
            > svg {
              aspect-ratio: 1;
              @include media(pc) {
                width: pc(10);
              }
            }
          }
          > .p-page10_line {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: pc(1);
            background-color: $color_black_01;
            transform-origin: right top;
            transform: scale(0, 1);
            transition: 0.55s ease;
            transition-property: transform;
          }
        }
      }
      > .p-page10_image {
        position: absolute;
        display: block;
        top: 0;
        left: 0;
        width: pc(350);
        aspect-ratio: 1;
        background-position: 0 0;
        background-size: cover;
        transform: translate(-50%, -50%);
        z-index: 0;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
      }
    }
  }
</style>

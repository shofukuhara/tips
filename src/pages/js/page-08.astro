---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | js カードスライド(swiper)';
const description = 'Tips | js カードスライド(swiper)';
---

<Layout {title} {description} pageData="page08">
  <Header />
  <div class="p-page08">
    <div class="p-page08_fv">
      <div class="swiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide __01">
            カード1
          </div>
          <div class="swiper-slide __02">
            カード2
          </div>
          <div class="swiper-slide __03">
            カード3
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page08 {
    position: relative;
    > .p-page08_fv {
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: $color_white_01;
      display: flex;
      align-items: center;
      justify-content: center;
      @include media(pc) {
        font-size: pc(40);
      }
      >.swiper {
        @include media(sp) {
          width: sp(300);              
          aspect-ratio: 9 / 12; 
          border-radius: sp(8);   
        }
        @include media(pc) {
          width: pc(300);              
          aspect-ratio: 9 / 12; 
          border-radius: pc(8);        
        }
        >.swiper-wrapper {
          >.swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;
            &.__01 {
              background-color: rgb(118, 118, 255);
            }
            &.__02 {
              background-color: rgb(118, 255, 225);
            }
            &.__03 {
              background-color: rgb(218, 255, 118);
            }
          }
        }
      }
    }
    
  }
</style>
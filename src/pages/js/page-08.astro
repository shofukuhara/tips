---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | js カードスライド(swiper)';
const description = 'Tips | js カードスライド(swiper)';
---

<Layout {title} {description} pageData="page08">
  <Header />
  <div class="p-page08">
    <div class="p-page08_fv">
      <div class="swiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide __01" data-fade>
            <ImageFrame
              srcPaths={['img_01.jpg']}
              classNames="i"
              loading="eager"
              data-img=""
            />
          </div>
          <div class="swiper-slide __02" data-fade>
            <ImageFrame
              srcPaths={['img_02.jpg']}
              classNames="i"
              loading="eager"
              data-img=""
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page08 {
    position: relative;
    > .p-page08_fv {
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: $color_white_01;
      display: flex;
      align-items: center;
      justify-content: center;
      @include media(pc) {
        font-size: pc(40);
      }
      > .swiper {
        overflow: visible;
        @include media(sp) {
          width: sp(300);
          aspect-ratio: 9 / 12;
          border-radius: sp(8);
        }
        @include media(pc) {
          width: pc(300);
          aspect-ratio: 9 / 12;
          border-radius: pc(8);
        }
        > .swiper-wrapper {
          > .swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;
            will-change: opacity, transform;
            &[data-fade='active'] {
              animation: fade 1.5s forwards;
              transition-property: animation;
            }
            > .i {
              width: 100%;
              height: 100%;
              object-fit: cover;
              object-position: center center;
            }
          }
        }
      }
    }
  }
  @keyframes fade {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>

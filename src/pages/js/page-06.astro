---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Button from '../../components/Button.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | js スクロール + テキスト一文字ずつ表示(GSAP)';
const description = 'Tips | js スクロール + テキスト一文字ずつ表示(GSAP)';
---

<Layout {title} {description} pageData="page06">
  <Header />
  <div class="p-page06">
    <div class="p-page06_fv">↓スクロールしてね！</div>
    <section class="p-page06_section">
      <h2 class="p-page06_title" data-split-fade>section01</h2>
    </section>
    <section class="p-page06_section">
      <h2 class="p-page06_title" data-split-fade>section02</h2>
    </section>
    <section class="p-page06_section">
      <h2 class="p-page06_title" data-split-fade>section03</h2>
    </section>
    <section class="p-page06_section">
      <h2 class="p-page06_title" data-split-fade>section04</h2>
    </section>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page06 {
    position: relative;
    > .p-page06_fv {
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: $color_white_01;
      display: flex;
      align-items: center;
      justify-content: center;
      @include media(pc) {
        font-size: pc(40);
      }
    }
    > .p-page06_section {
      display: flex;
      align-items: center;
      justify-content: center;
      border-top: 1px solid $color_black_01;
      height: 100vh;
      width: 100%;
      > .p-page06_title {
        border: 1px solid $color_black_01;
        display: flex;
        align-items: center;
        justify-content: center;
        @include media(sp) {
          font-size: sp(16);
        }
        @include media(pc) {
          width: pc(300);
          height: pc(300);
          font-size: pc(28);
        }
        &[data-scroll-fade] {
          opacity: 0;
          visibility: hidden;
        }
      }
    }
  }
</style>

---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | css @property';
const description = 'Tips | css @property';
---

<Layout {title} {description}>
  <Header />
  <div class="p-page05">
    <div class="p-page05_area">
      <div class="p-page05_circle"></div>
      <div class="p-page05_line"></div>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  @property --degree {
    syntax: '<angle>';
    inherits: true;
    initial-value: 0deg;
  }
  @property --angle {
    syntax: '<angle>';
    inherits: true;
    initial-value: 0deg;
  }
  :root {
    --color1: #1500ff;
    --color2: #e2e2ff;
  }
  .p-page05 {
    width: 100%;
    height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    .p-page05_area {
      width: pc(400);
      height: pc(400);
      background: linear-gradient(var(--angle), var(--color1), var(--color2));
      animation: gradient 10s linear infinite;
      border-radius: 16px;
      position: relative;
      .p-page05_line {
        width: pc(350);
        height: pc(350);
        border-radius: 50%;
        position: absolute;
        top: 0;
        left: 0;
        border: 1px solid #ffffff;
        z-index: 2;
        inset: 0;
        margin: auto;
      }
      .p-page05_circle {
        position: absolute;
        top: 50%;
        left: 50%;
        width: pc(32);
        height: pc(32);
        margin-top: pc(-16);
        margin-left: pc(-16);
        background-color: #ffffff;
        border-radius: 50%;
        --r: 12vw; /* 半径 */

        translate: calc(var(--r) * cos(var(--degree)))
          calc(var(--r) * sin(var(--degree)));
        animation: circular 5s linear infinite;
      }
      @keyframes gradient {
        0% {
          --angle: 0deg;
        }

        100% {
          --angle: 360deg;
        }
      }
      @keyframes circular {
        from {
          --degree: 0deg;
        }
        to {
          --degree: 360deg;
        }
      }
    }
  }
</style>

---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | css モーフィング';
const description = 'Tips | css モーフィング';
---

<Layout {title} {description}>
  <Header />
  <div class="fv">
    <div class="mask">
      <ImageFrame
        srcPaths={['img_02.jpg']}
        classNames="i"
        loading="eager"
        data-img=""
      />
    </div>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .fv {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .mask {
    -webkit-mask-image: url(../../../public/assets/images/mask.svg);
    mask-image: url(../../../public/assets/images/mask.svg);
    @include media(sp) {
      width: sp(250);
      aspect-ratio: 1;
      -webkit-mask-size: sp(250);
      mask-size: sp(250);
    }
    @include media(pc) {
      width: pc(500);
      aspect-ratio: 1;

      -webkit-mask-size: pc(500);
      mask-size: pc(500);
    }
    .i {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>

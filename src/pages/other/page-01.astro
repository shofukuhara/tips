---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import ImageFrame from '../../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | other アコーディオン';
const description = 'Tips | other アコーディオン';
---

<Layout {title} {description} pageData="other01">
  <Header />
  <div class="p-page01">
    <div class="p-page01_fv l-wrapper __s">
      <details class="p-page01_details">
        <summary class="p-page01_summary" data-accordion>
          <span class="p-page01_wrap">
            アコーディオンです！
            <span class="p-page01_icon"></span>
          </span>
        </summary>
        <div class="p-page01_content" data-accordion="text">
          <p class="p-page01_text">
            アコーディオンをdetailsとsummaryを使って実装
          </p>
        </div>
      </details>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use '../../styles/foundation/setting/mixin' as *;
  @use '../../styles/foundation/setting/function' as *;
  @use '../../styles/foundation/variable/color' as *;
  .p-page01 {
    > .p-page01_fv {
      height: 100dvh;
      margin-top: pc(240);
      // display: grid;
      // place-items: center;
      > .p-page01_details {
        width: 100%;
        @include media(pc) {
          margin-top: pc(40);
        }
        > .p-page01_summary {
          display: block;
          > .p-page01_wrap {
            border: 1px solid $color_black_01;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
            @include media(pc) {
              padding: pc(16) pc(16);
            }
            > .p-page01_icon {
              position: relative;
              display: flex;
              align-items: center;
              justify-content: center;
              &::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: $color_black_01;
              }
              &::after {
                content: '';
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: $color_black_01;
                rotate: 90deg;
              }
              @include media(pc) {
                width: pc(24);
                aspect-ratio: 1;
              }
            }
          }
        }
        > .p-page01_summary::-webkit-details-marker {
          display: none;
        }
        > .p-page01_content {
          overflow: hidden;
          > .p-page01_text {
            background-color: rgb(200, 200, 200);
            height: 100px;
            @include media(pc) {
              padding: pc(16) pc(16);
            }
          }
        }
      }
    }
  }
</style>

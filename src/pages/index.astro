---
import Layout from '../layouts/Layout.astro';
import Header from '../layouts/Header.astro';
import Card from '../components/Card.astro';
import ImageFrame from '../modules/ImageFrame.astro';
const imagePath = './assets/images/';
// headタグ
const title = 'Tips | TOP';
const description = 'Tips | TOP';
---

<Layout {title} {description} pageData="top">
  <Header />
  <div class="p-top l-wrapper">
    <Card link="/js/page-01/" category="js" title="アンカーリンク(GSAP)" />
    <Card
      link="/js/page-02/"
      category="js"
      title="スクロールフェードイン<br>(GSAP IntersectionObserver)"
    />
    <Card link="/js/page-03/" category="js" title="非同期遷移(barba.js)" />
    <Card
      link="/js/page-04/"
      category="js"
      title="テキスト一文字ずつ表示(GSAP)"
    />
    <Card
      link="/js/page-05/"
      category="js"
      title="スクロールに応じて拡大(GSAP)"
    />
    <Card
      link="/js/page-06/"
      category="js"
      title="スクロール + テキスト一文字ずつ表示(GSAP)"
    />
  </div>
</Layout>

<style lang="scss">
  @use '../styles/foundation/setting/mixin' as *;
  @use '../styles/foundation/setting/function' as *;
  @use '../styles/foundation/variable/color' as *;
  .p-top {
    @include media(sp) {
      margin-top: sp(80);
    }
    @include media(pc) {
      margin-top: pc(240);
      display: flex;
      flex-wrap: wrap;
      gap: pc(40);
    }
  }
</style>
